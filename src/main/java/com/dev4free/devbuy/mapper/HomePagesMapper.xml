<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dev4free.devbuy.mapper.HomePagesMapper">

<!-- 查询HomePagesInfo -->
<select id="findHomePagesInfoByInfoName" parameterType="String" resultType="HomePages">
SELECT * FROM homepagesinfo 
WHERE info_name=#{info_name}
</select>

<!-- 更新HomePagesInfo -->
<update id="updateHomePagesInfo" parameterType="HomePages">
UPDATE homepagesinfo 
SET info_name=#{info_name},info=#{info} 
WHERE info_id=#{info_id}
</update>

<!-- 创建MyHomePages -->
<insert id="insertHomePagesInfo" parameterType="HomePages">
INSERT INTO homepagesinfo(info_id,info_name,info) 
VALUES(#{info_id},#{info_name},#{info})
</insert>




</mapper>